
URxvt.perl-ext-common: default,clipboard,keyboard-select,matcher

!URxvt.font: xft:DejaVu Sans Mono:pixelsize=10
URxvt.font: xft:Luxi Mono:pixelsize=10
URxvt.scrollBar: false
! Narrower kerning, not sure about this one yet
! URxvt.letterSpace: -1

! Scrollback - allow scrollback while output is going on
! do not scroll with new output
URxvt.scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+PgUp)
URxvt.scrollWithBuffer: true
! scroll back to the bottom on keypress
! might want to disable this
URxvt.scrollTtyKeypress: true

! Clipboard
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: eval:selection_to_clipboard
URxvt.keysym.M-v: eval:paste_clipboard
URxvt.keyboard-select.clipboard: true

! Matcher
URxvt.matcher.button: 1
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.rend.0: Uline Bold fg5

!fake alpha
URxvt*transparent: true
URxvt*shading: 20

!real alpha, if compiz is running
! urxvt*depth:32
! urxvt*background: rgba:0000/0000/0200/c800

! Colours - disabled since I am going to use pywal instead
